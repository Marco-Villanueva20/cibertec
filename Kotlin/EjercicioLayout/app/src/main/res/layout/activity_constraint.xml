<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintActivity">

    <TextView
        android:id="@+id/lblTitleConstraint"
        android:text="@string/title_constraint"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblNombreLegend"
        android:text="@string/nombres"
        app:layout_constraintStart_toStartOf="@id/lblTitleConstraint"
        app:layout_constraintTop_toBottomOf="@id/lblTitleConstraint"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblNombre"
        android:text="Marco"
        app:layout_constraintStart_toEndOf="@id/lblNombreLegend"
        app:layout_constraintTop_toBottomOf="@id/lblTitleConstraint"
        android:layout_marginTop="10sp"
        android:layout_marginStart="30sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblApellidoPaternoLegend"
        android:text="@string/apellidoPaterno"
        app:layout_constraintStart_toStartOf="@id/lblNombreLegend"
        app:layout_constraintTop_toBottomOf="@id/lblNombreLegend"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblApellidoPaterno"
        android:text="Villanueva"
        app:layout_constraintStart_toEndOf="@id/lblApellidoPaternoLegend"
        app:layout_constraintTop_toBottomOf="@id/lblNombre"
        android:layout_marginTop="10sp"
        android:layout_marginStart="30sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblApellidoMaternoLegend"
        android:text="@string/apellidoMaterno"
        app:layout_constraintStart_toStartOf="@id/lblApellidoPaternoLegend"
        app:layout_constraintTop_toBottomOf="@id/lblApellidoPaternoLegend"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblApellidoMaterno"
        android:text="Soto"
        app:layout_constraintStart_toEndOf="@id/lblApellidoMaternoLegend"
        app:layout_constraintTop_toBottomOf="@id/lblApellidoPaterno"
        android:layout_marginTop="10sp"
        android:layout_marginStart="30sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>