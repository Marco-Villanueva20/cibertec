<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/lycard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivImagenCarro"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="@id/lycard"
            app:layout_constraintEnd_toStartOf="@id/lblMarca"
            app:layout_constraintTop_toTopOf="@id/lycard"
            android:layout_marginBottom="4dp"
            />
        <TextView
            android:id="@+id/lblMarca"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/marca_carros_legend"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@id/lblModelo"
            app:layout_constraintStart_toEndOf="@id/ivImagenCarro"
            app:layout_constraintTop_toTopOf="@id/lycard"
            android:layout_marginBottom="4dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/lblModelo"
            android:text="@string/modelo_carros_legend"
            app:layout_constraintEnd_toEndOf="@id/lycard"
            app:layout_constraintTop_toTopOf="@id/lycard"
            app:layout_constraintStart_toEndOf="@id/lblMarca"
            android:layout_marginTop="12sp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32sp"
            android:layout_marginBottom="4dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/lycard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>