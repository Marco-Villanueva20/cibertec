<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme./ Tema base de la aplicación. -->
    <style name="Theme.Proyecto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. / Color principal de la marca. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. / Color secundario de la marca. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. / Color de la barra de estado. -->
        <!-- <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. / Personaliza tu tema aquí. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    <style name="Theme.Proyecto.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/teal_200</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/img_proyecto</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Proyecto</item>
    </style>
</resources>